@model Bug


<div class="overview">
    <div class="container">
        @using (Html.BeginForm("InsertBugDb", "BugController1", "Post"))
        {

            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Created by: </span>

                <input type="text" class="form-control" value="" placeholder="Employee Name" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon2">Generate Id: </span>
                    <input type="text" asp-for="Id" value="" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                </div>

            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon3">Issue Title:</span>

                <input type="text" asp-for="Title" name="Title" value="" class="form-control" placeholder="Ex: Data Base not connecting" id="basic-url" aria-describedby="basic-addon3">
            </div>
            <div class="input-group">
                <span class="input-group-text">Issue Summary: </span>
                <textarea asp-for="Summary" name="Summary" class="form-control" aria-label="With textarea"></textarea>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon3">Assigned To: </span>
                <input type="text" asp-for="Assigned" value="" name="Assigned" class="form-control" placeholder="Employee Name" id="basic-url" aria-describedby="basic-addon3">
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>

        }
    </div>
</div>